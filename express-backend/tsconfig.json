{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ES2020",  
    "rootDir": "./", 
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": false,
  },
  "include": ["**/*.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
